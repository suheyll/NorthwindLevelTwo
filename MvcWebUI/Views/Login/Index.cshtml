@model UserListViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h2>kisiler</h2>
<table class="table table-responsive">
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            
        </tr>
    }

</table>

<title>Islem</title>

<form asp-controller="Login" asp-action="Index" asp-route-userName="userName" asp-route-password="password"  method="post">
    <div class="form-group">
        <label asp-for="User.UserName">Ad</label>
        <input asp-for="User.UserName" class="form-control" name="userName" placeholder="userName"/>
    </div>
    <div class="form-group">
        <label asp-for="User.Password">Ad</label>
        <input asp-for="User.Password" class="form-control" name="password" placeholder="password"/>
    </div>
    <input type="submit" value="Login" class="btn btn-success btn-group-sm"/>
</form>

